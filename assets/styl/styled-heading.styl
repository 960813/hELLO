.content__permalink[data-mode='tape'],
.content__permalink[data-mode='screen'],
.main__list[data-image-mode='tape'],
.main__list[data-image-mode='screen']
  margin-top 0 !important
  padding-top 0 !important
  header
    display flex
    flex-direction column
    align-items center
    justify-content center
    .img
      display block
      .mask, .thumbnail
        position absolute
        top 0
        right 0
        width 100%
      .thumbnail
        object-fit cover
        z-index 1
      .mask
        background-color alpha(black, .5)
        z-index 2
    .heading
      *
        position relative
        z-index 3
        color white !important

.content__permalink[data-mode='screen'],
.main__list[data-image-mode='screen']
  header
    height 100vh
    .img
      .mask, .thumbnail
        height 100vh
    .heading
      .title
        font-size 2.2rem
        @media screen and (max-width: 1200px)
          font-size 1.8rem

.content__permalink[data-mode='tape'],
.main__list[data-image-mode='tape']
  header
    height 280px
    .img
      .mask, .thumbnail
        height 280px

.content__permalink[data-mode='default'],
.main__list[data-image-mode='default']
  header
    .img
      display none
