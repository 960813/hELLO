    margin-top 120px
  ul
    margin-top 60px
  .uk-grid
    margin-left -10px
    margin-right -10px
  .list__header
    text-align center
    .img
      display none
    .heading
      .title
        font-size 1.8rem
        text-align center
        font-weight 600
        margin-bottom 0px
      .description
        margin-top 10px
