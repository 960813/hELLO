#__spy
  position absolute
  width 180px
  list-style none
  text-align left
  font-weight 400
  z-index 0
  display none
  ul
    position sticky
    top 80px
  .uk-active
    a
      transition-duration .5s
      color alpha($THEME_COLOR_BLACK, .9)
      font-weight 500
  a[data-tag=h3]
    padding-left 15px
  @media screen and (max-width: 1820px)
    display none !important

#tt-body-page
  #__spy
    display block
    // (MAX_WIDTH + ARTICLE_WIDTH / 2) + MARGIN_LEFT
    padding-left 'calc(((1100px + %s) / 2) + 50px)' % var(--h-article-width)
