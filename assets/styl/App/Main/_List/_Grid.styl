.list[data-mode='grid']
  .item
    padding 10px
    box-sizing border-box
    .img
      .thumbnail
        max-width none
        object-fit cover
        height 260px
    .description
      font-size .96rem
      .title
        font-size 1.2rem
    @media screen and (max-width: 640px)
      height unset !important
      .img
        .thumbnail
          height unset !important
