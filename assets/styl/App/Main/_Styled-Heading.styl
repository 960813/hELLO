.content__permalink[data-mode='tape'],
.content__permalink[data-mode='screen'],
.main__list[data-image-mode='tape'],
.main__list[data-image-mode='screen']
  margin-top 0 !important
  padding-top 0 !important
  header
    display flex
    flex-direction column
    align-items center
    justify-content center
    .img
      display block
      .mask, .thumbnail
        position absolute
        top 0
        right 0
        width 100%
      .thumbnail
        object-fit cover
        z-index 1
      .mask
        background-color alpha(black, .5) //- NT
        z-index 2
    .heading
      *
        position relative
        z-index 3
        color white !important //- NT

@media screen and (min-width: 1400px)
  body[data-sidebar-default='1']
    .content__permalink[data-mode='tape'],
    .content__permalink[data-mode='screen'],
    .main__list[data-image-mode='tape'],
    .main__list[data-image-mode='screen']
      header
        .thumbnail, .mask
          width 'calc(100% - %s)' % ($SIDEBAR_WIDTH) !important
