.cover[data-mode^='slider']
  .item
    padding 0
    .description
      padding 60px
      .title
        font-size 1.3rem
        @media screen and (max-width: 960px)
          font-size 1.5rem
        @media screen and (max-width: 640px)
          font-size 1.8rem
    .img
      .thumbnail
        object-fit cover
        margin-bottom 0
    @media screen and (max-width: 1200px)
      .description
        padding 25px
