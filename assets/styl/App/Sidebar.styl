$WIDTH = 250px

#__sidebar
  &.uk-offcanvas-overlay
    &::before
      background alpha(black, .7)
  .uk-offcanvas-bar
    background-color $THEME_BACKGROUND_COLOR_LEVEL1
    position fixed
    top 0
    width $WIDTH
    height 100%
    overflow hidden
    z-index 9998
    transition-duration .2s
    transition-property left
    padding 0 !important
    .__
      overflow-x hidden
      overflow-y scroll
      height 100%
      width $WIDTH + 20px
      position absolute
      padding 25px 0
      box-sizing border-box
      z-index 9997
      > div, nav
        padding 15px 0
        padding-left 20px
        box-sizing border-box
        max-width $WIDTH
        ul li
          TextOverflowHidden()
          max-width $WIDTH - 38px
          *
            color alpha($THEME_COLOR_BLACK, .5) !important
      h2
        color alpha($THEME_COLOR_BLACK, .9)
        font-size .9rem
        font-weight 600

@media screen and (min-width: 1400px)
  body[data-sidebar-default='1']
    #__sidebar
      display block
      .uk-offcanvas-bar
        left 0 !important
