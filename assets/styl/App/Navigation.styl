.uk-sticky-placeholder
  display none

#__nav
  width 100% !important
  box-sizing border-box
  padding 0px 20px
  height 59px
  position absolute
  z-index 9996
  background none
  top 0
  &.sticky
    background-color alpha($THEME_COLOR_WHITE, .8)
    backdrop-filter blur(2px)
  @media screen and (max-width: 1260px)
    padding 0 15px
    height 54px

@media screen and (min-width: 1400px)
  body[data-sidebar-default='1']
    #__nav
      width 'calc(100% - %s)' % ($SIDEBAR_WIDTH) !important
      #nav__s1
        display none !important
