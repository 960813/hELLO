script.
  /**
   * Copy TistoryToolbar to Body
   */
  $(document).ready(() => {
    $('.menu_toolbar > div[class=btn_tool]').appendTo('#__nav > #nav__s2')
    $('#__nav > #nav__s2 > div[class=btn_tool] > .btn_menu_toolbar.btn_subscription').append('<i class="fa fa-star"></i>')
  })

style
  :stylus
    $size = 40px

    #__nav
      div[class=btn_tool]
        .btn_menu_toolbar.btn_subscription
          cursor pointer
          width $size
          height $size
          line-height 1em
          text-align center
          border-radius 50%
          border none
          background-color alpha(black, .9)
          color white
          transition-duration .1s
          *:not(i)
            display none
          @media screen and (max-width: 1260px)
            width $size - 5px
            height $size - 5px

style
  :stylus
    html[data-theme='dark']
      #__nav
        div[class=btn_tool]
          .btn_menu_toolbar.btn_subscription
            border #353638
            background-color #353638
            color alpha(white, .9)
            box-shadow none
            z-index 9996
            &:hover
              background-color #53575c
