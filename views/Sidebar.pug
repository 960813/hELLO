s_if_var_sidebar
  style(scoped)
    :stylus
      $SIDEBAR_WIDTH = 250px

      @media screen and (min-width: 1400px)
        #__sidebar
          left 0 !important
        #sidebar__mask
          display none !important
        //- BODY
        #__tidory
          padding-left $SIDEBAR_WIDTH !important
        //- COVER
        .main__cover[data-mode='slider'],
        .main__cover[data-mode='slider-screen'],
        .main__cover[data-mode='slideshow'],
        .main__cover[data-mode='slideshow-screen']
          width 'calc(100vw - %s)' % ($SIDEBAR_WIDTH) !important
          margin-left 'calc((((100vw - %s) - 100%) / 2) * -1)' % ($SIDEBAR_WIDTH) !important
          min-width unset !important
        //- NAV
        #__nav
          #nav__s1
            display none !important
        //- PERMALINK
        .content__permalink[data-mode='tape'],
        .content__permalink[data-mode='screen'],
        .main__list[data-image-mode='tape'],
        .main__list[data-image-mode='screen']
          header
            .thumbnail, .mask
              width 'calc(100% - %s)' % ($SIDEBAR_WIDTH) !important
        //- GLOBAL
        #__nav, #__footer
          width 'calc(100% - %s)' % ($SIDEBAR_WIDTH) !important
        //- NOTIFICATION
        .uk-notification
          &.uk-notification-bottom-left
            left $SIDEBAR_WIDTH + 20px !important
