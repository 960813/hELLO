style
  :stylus
    #__sidebar
      left -250px
    #sidebar__mask
      display none

s_if_var_sidebar
  style(scoped)
    :stylus
      $width = 250px

      @media screen and (min-width: 1400px)
        #__sidebar
          left 0 !important
        #sidebar__mask
          display none !important
        //- BODY
        #__tidory
          padding-left $width !important
        //- COVER
        .main__cover[data-mode='tape'], .main__cover[data-mode='screen']
          width 'calc(100vw - %s)' % ($width) !important
          margin-left 'calc((((100vw - %s) - 100%) / 2) * -1)' % ($width) !important
          min-width unset !important
        //- NAV
        #__nav
          #nav__s1
            display none !important
        //- PERMALINK
        .content__permalink[data-mode='tape'], .content__permalink[data-mode='screen'],
        .main__list[data-image-mode='tape'], .main__list[data-image-mode='screen']
          header
            .thumbnail, .mask
              width 'calc(100% - %s)' % ($width) !important
        //- GLOBAL
        #__nav, #__footer
          width 'calc(100% - %s)' % ($width) !important
        //- NOTIFICATION
        .uk-notification
          &.uk-notification-bottom-left
            left $width + 20px !important

style
  :stylus
