main#main(role='main')
  include Main/Text
  include Main/Component

style
  :stylus
    $width = 600px

    #main
      clear both
      padding 0 25px
      box-sizing border-box
      margin 0 auto
      width $width
      padding-top 100px
      min-height calc(100vh - 132px)
      @media screen and (max-width: 1200px)
        width 100%
        padding 0 15px
        padding-top 25px
        min-height calc(100vh - 122px)
