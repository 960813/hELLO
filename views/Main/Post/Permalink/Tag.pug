s_tag_label
  .permalink__tags [##_tag_label_rep_##]

script.
  /**
   * Remove Textnode Only in Tags
   */
  h.removeTextNodeOnly('.permalink__tags')

style
  :stylus
    $background = #f8f8f8
    $background-hover = #ed5207
    $color = alpha(black, .5)
    $color-hover = white
    $height = 32px

    .content__permalink
      .permalink__tags
        text-align left
        margin-top 5px
        a
          margin-top 10px
          margin-right 10px
          background-color $background
          color $color
          display inline-block
          font-size .8rem
          border-radius 26px
          height $height
          line-height $height - 2
          padding 0 14px
          transition-duration .2s
          &:hover
            background-color $background-hover
            color $color-hover

style
  :stylus
    html[data-theme='dark']
      .content__permalink
        .permalink__tags
          a
            background-color #292a2d
            color white
            &:hover
              background-color white
              color black !important
