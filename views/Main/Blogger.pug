#blogger
  img.thumbnail(src='[##_image_##]' width='100' height='100')
  .title [##_title_##]
  .blogger [##_blogger_##]
  .description [##_desc_##]

style
  :stylus
    #tt-body-index,
    #tt-body-category,
    #tt-body-archive
      #blogger
        display block
style
  :stylus
    $maxWidth = 450px

    #blogger
      text-align center
      max-width $maxWidth
      margin 0 auto
      margin-bottom 70px
      display none
      img
        border-radius 50%
      .title
        color alpha(black, .9)
        font-size 1.15rem
        margin-top 18px
        margin-bottom 3px
      .blogger
        margin-bottom 15px
        font-size .88rem
        color alpha(black, .5)
      .description
        color alpha(black, .4)
        font-size .92rem
        line-height 1.8em
