s_tag
  #__tags
    h1 태그 클라우드
    ul
      s_tag_rep
        li
          a(href='[##_tag_link_##]' class='[##_tag_class_##]') [##_tag_name_##]

style(scoped)
  :stylus
    $width = unquote('[##_var_tagcloud-width_##]' + 'px')

    #tt-body-tag
      #__tags
        width $width
        margin-left s('calc((%s - %s) / 2)', unquote('[##_var_index-width_##]' + 'px'), $width)

style
  :stylus
    $background = #f8f8f8
    $background-hover = #ed5207
    $color = alpha(black, .7)
    $color-hover = white

    #__tags
      ul
        column-count auto
        column-gap 20px
        column-width 160px
        li
          break-inside avoid
          text-align center
          margin-bottom 15px
          a
            background $background
            color $color
            display inline-block
            font-size .9rem
            border-radius 5px
            transition-duration .2s
            line-height 1.8em
            box-sizing border-box
            padding 20px 14px
            width 100%
            &:hover
              background-color $background-hover
              color $color-hover
        @media screen and (max-width: 690px)
          column-count 1
        @media screen and (min-width: 690px) and (max-width: 960px)
          column-count 2
        @media screen and (min-width: 960px) and (max-width: 1200px)
          column-count 4
      @media screen and (max-width: 1200px)
        width 100% !important
        margin-left 0 !important

style
  :stylus
    html[data-theme='dark']
      #__tags
        h1
          color white
        ul
          li
            a
              background #292a2d
              color white
              &:hover
                background-color white
                color black !important
