style
  :stylus
    $gap = 10px

    .__list[data-mode='gallery']
      .content__index
        padding $gap
        margin 0
        position relative
        .img
          .thumbnail
            margin 0
            object-fit cover
            max-width none
            border-radius 0
          &:hover + .description
            opacity 1
        .description
          box-sizing border-box
          padding 8px 15px
          bottom $gap
          width 'calc(100% - %s)' % ($gap * 2)
          background-color alpha(black, .5)
          backdrop-filter blur(5px)
          text-align center
          position absolute
          opacity 0
          transition-duration .3s
          &:hover
            opacity 1
          .category a
            font-size .82rem
            text-align center
          .title
            font-size .92rem
            line-height 1.5em
          *
            color white !important
            margin 0
