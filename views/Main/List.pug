s_list
  section.__list.main__list(data-mode='[##_list_style_##]' data-image-mode='[##_var_list-image-mode_##]')
    header.list__header
      s_list_image
        .img
          .mask
          img.thumbnail.lazyload(data-src='[##_list_image_##]' data-sizes='auto' alt='[##_list_conform_##]')
      .heading
        h1.title [##_list_conform_##]
    ul
      s_list_rep
        +index('list')

script.
  /* List */
  $(document).ready(() => {
    const $title = $('.__list > .list__header .title')

    $title.text($title.text() === '전체 글'
      ? T.config.BLOG.title
      : $title.text()
    )

    h.List.style('.__list.main__list > ul', $('.__list.main__list').attr('data-mode'))
  })

script.
  $(document).ready(() => {
    h.Layout.styledHeading('.main__list', 'header > .img', H.skinOptions.listImageMode, {
      attr: 'data-image-mode'
    })
