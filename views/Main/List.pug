style
  :stylus
    $category-color = #ed5207
    $title-color = alpha(black, .9)
    $summary-color = alpha(black, .5)
    $date-color = alpha(black, .3)
    $padding = 40px

    .content__index
      padding $padding 0
      &:first-of-type
        padding-top 0
        padding-bottom $padding
        border none
      &:last-of-type
        padding-bottom 0px
      .img
        .thumbnail
          width 100%
          margin-bottom 15px
          border-radius 5px
      .description
        .title
          margin-top 0px
          margin-bottom 15px
          line-height 1.5em
          font-size 1.3rem
          font-weight 500
          a
            color $title-color
            img
              display none
        .category
          margin-bottom 5px
          a
            font-size .9rem
            font-weight 500
            color $category-color
        .summary
          display -webkit-box
          display -ms-flexbox
          display box
          -webkit-box-orient vertical
          -webkit-line-clamp 3
          line-height 1.8em
          overflow hidden
          max-height 80px
          margin-top 1px
          vertical-align top
          word-break break-all
          color $summary-color
        .date
          font-size .87rem
          color $date-color
          > span
            margin-left 7px
      @media screen and (max-width: 1200px)
        padding 25px 0
        &:first-of-type
          padding-bottom 25px
        .title
          font-size 1.3rem

