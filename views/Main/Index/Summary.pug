style
  :stylus
    @media screen and (min-width: 600px)
      .post
        .title
            font-size 1.5em
    @media screen and (max-width: 600px)
      .post
        .title
          font-size 1.3em
    .post
      padding 50px 0
      border-top 1px solid rgba(0, 0, 0, .1)
      &:first-of-type
        padding-top 0
        padding-bottom 50px
        border none
      &:last-of-type
        padding-bottom 0px
      .title
        margin-top 10px
        line-height 1.5em
        a
          color rgba(0, 0, 0, .9) !important
      .category
        margin-bottom 8px
