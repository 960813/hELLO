s_notice_rep
  #__notice
    section.__list.main__list(data-mode='[##_var_notice-list-mode_##]')
      h1.list__title 공지사항
      ul
        +index('notice', false)
    +permalink('permalink_article', 'notice', false)

script.
  /**
   * Remove list element when notice permalink page
   */
   $(document).ready(() => {
     const $notice = $('#__notice')

     if ($notice.find('#permalink_article').length) {
      $notice.find('.__list[data-mode]').remove()
     }
   })
