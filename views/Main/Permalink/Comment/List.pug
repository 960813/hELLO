s_rp_container
  ul#comments(uk-accordion)
    s_rp_rep
      li(id="[##_rp_rep_id_##]")
        include List/Comment
        ul#re-comments(class="uk-accordion-content")
          s_rp2_rep
            li(id='[##_rp_rep_id_##]')
              include List/Reply

script.
  Array.from(document.querySelectorAll('.control')).forEach(control => {
    control.addEventListener('click', e => e.stopPropagation())
  })

style
  :stylus
    @media screen and (min-width: 600px)
      #comments
        .rp
          margin 15px 0
        .description
          p
            padding 12px 20px
            font-size .92rem
    @media screen and (max-width: 600px)
      #comments
        .rp
          margin 10px 0
        .description
          p
            padding 8px 16px
            font-size .84rem
    #comments
      list-style none
      padding 0
      margin 0
      margin-top 20px
      overflow hidden
      #rp-mask
        z-index 9998
        display none
        position fixed
        top 0
        background-color white
        opacity .8
        width 100%
        height 100%
      .rp
        position relative
      li
        overflow hidden
        div
          overflow hidden
          .profile
            img
              border-radius 50%
              width 40px
              height 40px
          .description
            p
              display inline-block
              border-radius 26px
              margin-bottom 0
              font-weight 500
              letter-spacing .8px
            .control
              overflow hidden
              font-size .77rem
              margin-top 8px
              .date
                color rgba(0, 0, 0, .5)
              .action
                margin-top 5px
                font-size .9rem

