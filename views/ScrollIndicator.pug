#scroll-indicator
  .progress-container
    .progress-bar

script.
  /**
   * Scoll Indicator
   */
  $(document).ready(() => {
    $(window).on('scroll', () => {
      const winScroll = $(window).scrollTop()
      const height = $(document).outerHeight() - $(window).height()

      $('#scroll-indicator .progress-bar').css('width', (winScroll / height) * 100 + '%')
    })
  })

style
  :stylus
    $height = 3px
    $background-color = #1e1f21

    #scroll-indicator
      position fixed
      top 0
      width 100%
      z-index 9998
      .progress-container
        width 100%
        height $height
        .progress-bar
          height $height
          background-color $background-color
          width 0%
          border-radius 0 5px 5px 0

style
  :stylus
    html[data-theme='dark']
      #scroll-indicator
        .progress-container
          .progress-bar
            background-color alpha(white, .8)
